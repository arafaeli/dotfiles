" Enable pathogen
call pathogen#infect()

" Enable syntax hilighting
syntax enable

" Python syntax
let python_highlight_all = 1

" Jedi
" let g:jedi#use_splits_not_buffers = "left"
set splitbelow

" Dockerfile recognition
autocmd BufNewFile,BufRead *.Dockerfile setf dockerfile
